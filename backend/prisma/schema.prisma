generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ... (Giữ nguyên generator và datasource)

// 1. Bảng User sửa lại: Thay field 'role' string bằng quan hệ sang bảng Role
model User {
  id        String   @id // "NV001"
  email     String   @unique
  password  String
  fullName  String
  isActive  Boolean  @default(true)
  
  // ... (các trường cũ giữ nguyên)
  roleId       String
  role         Role       @relation(fields: [roleId], references: [id])
  departmentId String
  department   Department @relation(fields: [departmentId], references: [id])
  mustChangePassword Boolean @default(false)
  posts        Post[]     // Đã có từ trước
  
  // --- THÊM DÒNG NÀY ---
  notifications Notification[] 
}

// 2. Bảng Role (Vai trò): Ví dụ ID="ADMIN", "ACC_MGR" (Trưởng phòng kế toán)
model Role {
  id          String       @id // Tự đặt mã: "ADMIN", "SALE_STAFF"
  name        String       // Tên hiển thị: "Quản trị viên", "Nhân viên kinh doanh"
  description String?
  
  users       User[]       // 1 Role có nhiều User
  permissions RolePermission[] // 1 Role có nhiều Quyền
}

// 3. Bảng Permission (Quyền hạn chi tiết): Ví dụ ID="USER_CREATE", "ORDER_VIEW"
model Permission {
  id          String           @id // Mã quyền: "USER_READ", "POST_DELETE"
  name        String           // "Xem danh sách user", "Xóa bài viết"
  module      String           // Gom nhóm: "SYSTEM", "CONTENT", "SALES"
  
  roles       RolePermission[] 
}

// 4. Bảng trung gian (Many-to-Many giữa Role và Permission)
model RolePermission {
  roleId       String
  permissionId String
  
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([roleId, permissionId]) // Khóa chính phức hợp
}

// ... (Các bảng Department, Menu, Post... giữ nguyên như cũ)
model Department {
  id            String   @id             
  name          String
  code          String   @unique         
  users         User[]
  targetedPosts PostDepartment[]
}
// ... (Copy tiếp các model Post, Menu... vào đây)
model Post {
  id           String   @id @default(uuid())
  title        String
  content      String   @db.Text
  attachments  Json?
  
  // --- THÊM DÒNG NÀY VÀO ---
  published    Boolean  @default(true) 
  // -------------------------

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  menuId       Int
  menu         Menu     @relation(fields: [menuId], references: [id])
  authorId     String
  author       User     @relation(fields: [authorId], references: [id])
  departmentId String?
  targets      PostDepartment[]
  
  @@map("posts")
}

model Menu {
  id        Int      @id @default(autoincrement())
  title     String
  slug      String?  // Đường dẫn tĩnh (VD: /thong-bao)
  order     Int      @default(0) // Sắp xếp thứ tự
  isVisible Boolean  @default(true) // Ẩn/Hiện

  parentId  Int?
  parent    Menu?    @relation("MenuHierarchy", fields: [parentId], references: [id])
  children  Menu[]   @relation("MenuHierarchy")

  posts     Post[]   // Quan hệ với bài viết
  
  @@map("menus")
}

model PostDepartment {
  id           String     @id @default(uuid())
  postId       String
  departmentId String
  // Sửa dòng dưới đây:
  post         Post       @relation(fields: [postId], references: [id], onDelete: Cascade)
  department   Department @relation(fields: [departmentId], references: [id])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String   // Người nhận
  
  // Quan hệ ngược về User
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title     String
  message   String
  isRead    Boolean  @default(false)
  link      String?  // Link tùy chọn (nếu có)
  createdAt DateTime @default(now())

  @@map("notifications")
}